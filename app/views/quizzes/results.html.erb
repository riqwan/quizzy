<h3>Results</h3>

<% @quiz.questions.each do |question| %>
  <h4><%= question.text %></h4>

  <% question.choices.each do |choice| %>
    <% answers = Answer.where(choice: choice) %>
    <% answers_by_user = answers.find_by(quiz_response: @user.quiz_response) %>
    <p><%= choice.text %> - <%= answers.count %> <span><%= answers_by_user.present? ? '(Selected by you)' : nil %></span></p>
  <% end %>
<% end %>
